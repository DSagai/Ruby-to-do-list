<tr id="taskId=<%= task.id %>">
  <td class="col-md-6" id="task_task_body_<%= task.id %>">
    <%= link_to task.task_body, edit_list_task_path(task.list, task) %>
  </td>
  <td class="col-md-2" link="<%= list_task_path(task.list, task) %>">
    <input type="checkbox" class="task_done" id="task_done_<%= task.id %>"
           disabled="true"
           <%= task.done ? "checked" : "" %> />
    <%= link_to "Delete", [task.list ,task], confirm: 'Are you sure?', method: :delete, remote: true,
    class: "pull-right" %>
  </td>
</tr>